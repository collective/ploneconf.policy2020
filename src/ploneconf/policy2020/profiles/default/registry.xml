      <element>hr</element>
    </value>
    <value key="custom_attributes"
           purge="False">
      <element>role</element>
      <element>style</element>
    </value>
  </records>

  <records interface="Products.CMFPlone.interfaces.controlpanel.ITinyMCESchema"
           prefix="plone">
