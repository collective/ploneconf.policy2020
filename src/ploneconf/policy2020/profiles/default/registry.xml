    "discreet": {
        "inline": "span",
        "classes": "discreet"
    },
    "clearfix": {
        "block": "div",
        "classes": "clearfix"
    },
    "submitbutton": {
        "selector": "a",
        "classes": "btn btn-primary btn-lg",
        "attributes": {
            "role": "button"
        }
    }
}</value>
